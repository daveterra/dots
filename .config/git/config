[core]
	editor = hx
	pager = delta
[interactive]
	diffFilter =  "echo -n $(clear); delta --color-only --features=interactive"
[delta]
	navigate = true
	dark = true
[merge]
	conflictstyle = zdiff3
[alias]
	co = checkout
	ci = commit
	st = status
	sh = show
	br = branch
	f = fetch
	fa = fetch --all
	r = reset
	df = diff
	l = log
	gap = add --patch -i
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	type = cat-file -t
	dump = cat-file -p
	cleanbranch = fetch --all -Pp
	slog = log --graph --all --topo-order --pretty='format:%h %ai %s%d (%an)'
	check = ls-files --exclude-standard --others
	history = log -p --
	semver = describe --abbrev=0 --tags
